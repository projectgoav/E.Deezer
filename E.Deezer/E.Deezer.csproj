<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard1.1;netstandard2.0;net45</TargetFrameworks>
    <Copyright>Copyright 2019</Copyright>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild> 
    <Deterministic>False</Deterministic>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>E.Deezer</PackageId>
    <PackageAuthors>E</PackageAuthors>
    <PackageOwners>E</PackageOwners>
    <PackageLicense>https://github.com/projectgoav/E.Deezer</PackageLicense>
    <PackageProjectUrl>https://github.com/projectgoav/E.Deezer</PackageProjectUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageDescription>.NET Deezer API wrapper</PackageDescription>
    <PackageCopyright>Copyright 2019</PackageCopyright>
    <PackageTags>.NET Rest Deezer API</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json">
      <Version>12.0.1</Version>
    </PackageReference>    

  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net45'">
    <PackageReference Include="System.Net.Http" Version="4.3.2" />
  </ItemGroup>

</Project>